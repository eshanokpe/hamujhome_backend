<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect all requests to the public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L,QSA]
</IfModule>

# Block access to sensitive Laravel directories
RewriteRule ^(app|bootstrap|config|database|resources|routes|storage|tests|vendor)/.*$ - [F,L]

# Block access to sensitive files
<FilesMatch "^(artisan|composer\.json|composer\.lock|\.env|\.gitignore|\.gitattributes|package\.json|yarn\.lock|webpack\.mix\.js|README\.md|CHANGELOG\.md|phpunit\.xml|\.git|\.github)">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block access to hidden files and directories
<FilesMatch "^\.">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Disable directory browsing
Options -Indexes